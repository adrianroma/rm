
 <page:a type="content" onload="event:default:load" skin="theme:summer" > 
   <header:a type="line" size="full" import="url:header:self" />
  
  <content:a type="grid" size="full" >
          
          <if:a value="input:user:location" equal="mexico"  > 
           <text:a>user:default:message</text:a>
          </if:a> 
   
          
            
  </content:a>
  <footer:a>
      <each:a value="user:default:options" as="option">
           <options:a>option</options:a>
      </each:a>
   
        <else:a>
            <text:b>user:mexico:message</text:b>
        </else:a>
   
  </footer:a>

</page:a>




